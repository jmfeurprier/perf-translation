{
	"name"        : "perf/translation",
	"type"        : "library",
	"license"     : "MIT",
	"description" : "Allows to translate strings.",
	"require"     : {
		"php"          : ">=7.4",
		"perf/caching" : "^3.0",
		"perf/source"  : "^2.0"
	},
	"require-dev": {
		"ext-xdebug"                : "*",
		"phing/phing"               : "~2.0",
		"phpmd/phpmd"               : "~2.0",
		"phpunit/phpunit"           : "^9.2",
		"squizlabs/php_codesniffer" : "^3.5"
	},
	"suggest": {
		"symfony/yaml" : "Allows to support YAML translation files.",
		"ext-simplexml": "Allows to support XML translation files."
	},
	"autoload" : {
		"psr-4" : {
			"perf\\Translation\\" : "src/"
		}
	}
}
